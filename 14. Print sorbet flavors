flavors = [
    "Banana",
    "Chocolate",
    "Lemon",
    "Pistachio",
    "Raspberry",
    "Strawberry",
    "Vanilla",
]

for flavor_1 in range (len(flavors)):
    for flavor_2 in range (flavor_1 + 1, len(flavors)):
        print (flavors[flavor_1], flavors[flavor_2], sep = ", ")



